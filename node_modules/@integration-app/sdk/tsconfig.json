{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2019", "DOM"],
    "strict": true,
    "outDir": "./",
    "baseUrl": "./"
  },
  "include": ["src/**/*.ts", ".eslintrc.js"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "entryPointStrategy": "resolve",
    "entryPoints": ["src/index.ts"],
    "basePath": "src",
    "readme": "none",
    "out": "_docs",
    "exclude": "**/*+(.test|.d).ts",
    "sort": ["source-order"],
    "name": "Integration App SDK",
    "customCss": "../typedocStyles.css",
    "includeVersion": true,
    "githubPages": false,
    "navigationLinks": {
      "Console": "http://console.integration.app",
      "React Lib": "http://console.integration.app/ref/react",
      "REST API": "http://console.integration.app/ref/rest-api"
    },
    "internalModule": "@integration-app/sdk"
  }
}
