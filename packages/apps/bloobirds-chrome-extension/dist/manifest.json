{
  "manifest_version": 3,
  "name": "DEV: Bloobirds",
  "description": "Browser extension for Bloobirds integration",
  "author": "Bloobirds Team",
  "content_scripts": [
    {
      "matches": [
        "*://*.whatsapp.com/*",
        "*://*.linkedin.com/*",
        "*://*.lightning.force.com/*",
        "*://*.localhost/*",
        "*://*.auth.bloobirds.com/*",
        "*://*.auth.dev-bloobirds.com/*",
        "*://*.crm4.dynamics.com/*"
      ],
      "js": [
        "src/content/index.js-loader.js"
      ]
    },
    {
      "matches": [
        "*://*.lightning.force.com/*"
      ],
      "js": [
        "src/content/injectJsStart.js-loader.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.lightning.force.com/*"
      ],
      "js": [
        "src/content/injectJsEnd.js-loader.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.whatsapp.com/*",
        "*://*.linkedin.com/*",
        "*://*.lightning.force.com/*",
        "*://*.localhost/*",
        "*://*.auth.bloobirds.com/*",
        "*://*.auth.dev-bloobirds.com/*",
        "*://*.crm4.dynamics.com/*"
      ],
      "js": [
        "src/content/injectCss.js-loader.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_title": "Bloobirds Extension",
    "default_popup": "src/popup/index.html",
    "default_icon": "src/favicon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "history",
    "webRequest",
    "scripting",
    "action",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://nyl.as/*",
    "*://*.nyl.as/*",
    "*://t.nylas.com/*",
    "https://mail.google.com/*"
  ],
  "icons": {
    "128": "src/favicon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*.js",
        "assets/*.css",
        "src/favicon.png",
        "src/logo.png"
      ],
      "matches": [
        "*://*/*"
      ]
    },
    {
      "resources": [
        "src/content/extendEventListeners.js"
      ],
      "matches": [
        "*://*.lightning.force.com/*"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": true
    }
  ],
  "version": "3.0.13"
}
