{
  "manifest_version": 3,
  "name": "Bloobirds",
  "description": "Test",
  "author": "Bloobirds Team",
  "content_scripts": [
    {
      "matches": [
        "*://*.whatsapp.com/*",
        "*://*.linkedin.com/*",
        "*://*.lightning.force.com/*",
        "*://*.localhost/*",
        "*://*.auth.bloobirds.com/*",
        "*://*.auth.dev-bloobirds.com/*",
        "*://*.crm4.dynamics.com/*"
      ],
      "js": ["src/content/index.js"]
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_title": "Bloobirds Extension",
    "default_popup": "src/popup/index.html",
    "default_icon": "src/favicon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "history",
    "webRequest",
    "scripting",
    "action",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://nyl.as/*",
    "*://*.nyl.as/*",
    "*://t.nylas.com/*",
    "https://mail.google.com/*"
  ],
  "icons": {
    "128": "src/favicon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*.js", "assets/*.css", "src/favicon.png", "src/logo.png"],
      "matches": ["*://*/*"]
    }
  ],
  "version": "1.0.0"
}
